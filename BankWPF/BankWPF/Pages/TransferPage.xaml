<local:BasePage x:TypeArguments="core:TransferViewModel" x:Class="BankWPF.TransferPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankWPF"
      xmlns:core="clr-namespace:BankWPF.Core;assembly=BankWPF.Core"
      mc:Ignorable="d" 
      x:Name="Page"
      d:DesignWidth="700"
      Title="Transfer">
    <Grid VerticalAlignment="Center">
        <Button HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                Panel.ZIndex="5"
                Command="{Binding ToMainPageCommand}"
                Content="Main page" 
                Margin="0 10 10 0"/>
        <Border Background="Transparent"
                Padding="30 100"
                Height="650">
            <Border Background="{StaticResource ForegroundLightBrush}" 
                    CornerRadius="10"
                    Padding="15 50 15 15">
                <StackPanel>
                    <!-- Balance Header -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 20">
                        <TextBlock Text="Balance : " 
                               FontSize="{StaticResource FontSizeLarge}" 
                               FontFamily="{StaticResource LatoRegular}"
                               Foreground="{StaticResource WordBlueBrush}"
                               />
                        <TextBlock Text="{Binding BalanceString}" 
                                   FontSize="{StaticResource FontSizeLarge}" 
                                   FontFamily="{StaticResource LatoRegular}"
                                   Foreground="{StaticResource WordBlueBrush}"
                                   />
                    </StackPanel>

                    <!-- Main content -->
                    <Grid VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80" />
                            <RowDefinition Height="80" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="120" />
                        </Grid.RowDefinitions>

                        <!-- Textbox for user's input value -->
                        <TextBox Grid.Row="0" Text="{Binding InputValue}" Tag="Enter value here" />

                        <!-- Textbox for login to transfer to -->
                        <TextBox Grid.Row="1" Text="{Binding InputUser}" Tag="Enter user here (login)" />

                        <!-- Buttons -->
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="7*" />
                                <ColumnDefinition Width="4*" />
                            </Grid.ColumnDefinitions>

                            <Button Content="Transfer" 
                                    Grid.Column="1"
                                    local:IsBusyProperty.Value="{Binding TransferIsRunning}"
                                    FontSize="{StaticResource FontSizeLarge}"
                                    Command="{Binding TransferCommand}" />
                        </Grid>

                        <!-- Errors -->

                        <!-- Error message if value wasnt integer number -->
                        <TextBlock Text="Value must be integer number."
                            Grid.Row="2" 
                            FontSize="{StaticResource FontSizeRegular}"
                            Foreground="{StaticResource WordRedBrush}"
                            Visibility="{Binding ErrorNotInteger, Converter={local:BooleanToVisiblityConverter}, ConverterParameter=True}"
                            />

                        <!-- Error message if not enough money to withdraw -->
                        <TextBlock Text="Not enough money to withdraw." 
                            Grid.Row="2"
                            FontSize="{StaticResource FontSizeRegular}"
                            Foreground="{StaticResource WordRedBrush}"
                            Visibility="{Binding ErrorNotEnoughMoney, Converter={local:BooleanToVisiblityConverter}, ConverterParameter=True}"
                            />

                        <!-- Error message if the value wasnt valid -->
                        <TextBlock Text="Value must be higher than 0." 
                            Grid.Row="2"
                            FontSize="{StaticResource FontSizeRegular}"
                            Foreground="{StaticResource WordRedBrush}"
                            Visibility="{Binding ErrorWrongValue, Converter={local:BooleanToVisiblityConverter}, ConverterParameter=True}"
                            />

                        <!-- Error message if the user wasnt found -->
                        <TextBlock Text="User was not found." 
                            Grid.Row="2"
                            FontSize="{StaticResource FontSizeRegular}"
                            Foreground="{StaticResource WordRedBrush}"
                            Visibility="{Binding ErrorUserNotFound, Converter={local:BooleanToVisiblityConverter}, ConverterParameter=True}"
                            />

                    </Grid>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</local:BasePage>
